    <jdk version="2">
      <name value="1.8" />
      <type value="JavaSDK" />
      <version value="java version &quot;{{ javaVersion }}&quot;" />
      <homePath value="{{ jdkFolder }}" />
      <roots>
        <annotationsPath>
          <root type="composite">
            <root url="jar://$APPLICATION_HOME_DIR$/lib/jdkAnnotations.jar!/" type="simple" />
          </root>
        </annotationsPath>
        <classPath>
          <root type="composite">
            {%- for module in javaModules %}
            <root url="jrt://{{ jdkFolder }}/jre/lib/{{ module }}!/" type="simple" />
            {%- endfor %}
          </root>
        </classPath>
        <javadocPath>
          <root type="composite" />
        </javadocPath>
        <sourcePath>
          <root type="composite">
            <root url="jar://{{ jdkFolder }}/src.zip!" type="simple" />
            <root url="jar://{{ jdkFolder }}/javafx-src.zip!" type="simple" />
          </root>
        </sourcePath>
      </roots>
      <additional />
    </jdk>
